<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context=".MyActivity"
    android:background="@drawable/bg01"
    android:id="@+id/top_view">

    <TextView
        android:text="@string/name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/nameText"
        android:textSize="20dp"
        android:textColor="#ffffffff"
        android:layout_below="@+id/youText"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/editTextName"
        android:autoText="false"
        android:editable="false"
        android:padding="5dp"
        android:background="@drawable/rounded_edittext"
        android:width="120dp"
        android:textColor="#ffffffff"
        android:inputType="textCapSentences"
        android:layout_below="@+id/nameText"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/editTextName2"
        android:autoText="false"
        android:editable="false"
        android:padding="5dp"
        android:background="@drawable/rounded_edittext"
        android:width="120dp"
        android:textColor="#ffffffff"
        android:inputType="textCapSentences"
        android:password="false"
        android:layout_below="@+id/name2Text"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <TextView
        android:text="@string/you"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/youText"
        android:textSize="30dp"
        android:textColor="#ffffffff"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <TextView
        android:text="@string/your_lvr"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/yourLvrText"
        android:textSize="30dp"
        android:textColor="#ffffffff"
        android:layout_below="@+id/editTextName"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginTop="27dp" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Calculate!"
        android:id="@+id/button"
        android:textColor="#ffffffff"
        android:textSize="20dp"
        android:background="@drawable/rounded_button2"
        android:clickable="false"
        android:layout_marginBottom="54dp"
        android:width="120dp"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true" />

    <TextView
        android:text="@string/name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/name2Text"
        android:textSize="20dp"
        android:textColor="#ffffffff"
        android:layout_below="@+id/yourLvrText"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="number"
        android:ems="10"
        android:id="@+id/editTextYear"
        android:background="@drawable/rounded_edittext"
        android:width="100dp"
        android:numeric="integer"


        android:textColor="#ffffffff"
        android:layout_alignTop="@+id/editTextName"
        android:layout_toRightOf="@+id/yourLvrText"
        android:layout_toEndOf="@+id/yourLvrText"
        android:layout_marginLeft="31dp"
        android:layout_above="@+id/yourLvrText" />

    <TextView
        android:text="@string/year_of_birth"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/yearText"
        android:textSize="20dp"
        android:textColor="#ffffffff"
        android:layout_above="@+id/editTextYear"
        android:layout_alignLeft="@+id/editTextYear"
        android:layout_alignStart="@+id/editTextYear" />

    <TextView
        android:text="@string/year_of_birth"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/yearText2"
        android:textSize="20dp"
        android:textColor="#ffffffff"
        android:layout_below="@+id/yourLvrText"
        android:layout_alignLeft="@+id/editTextYear"
        android:layout_alignStart="@+id/editTextYear" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="number"
        android:ems="10"
        android:id="@+id/editTextYear2"
        android:background="@drawable/rounded_edittext"
        android:width="100dp"
        android:numeric="integer"

        android:textColor="#ffffffff"
        android:layout_below="@+id/yearText2"
        android:layout_alignLeft="@+id/yearText2"
        android:layout_alignStart="@+id/yearText2"
        android:layout_alignBottom="@+id/editTextName2" />

</RelativeLayout>
